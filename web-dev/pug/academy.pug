                                    span.gm-badge-black 56:21
                                    img.card-img-top(src='../img/placeholders/doc-1.png', alt='Card image cap')
                                .card-block
                                    h4.gm-title.card-title Professional fellow program in management of diabetic foot-conditions (fmdf)
                                    .gm-reviews
                                        i.gm-star-full.fa.fa-star
                                        i.gm-star-full.fa.fa-star
                                        i.gm-star-full.fa.fa-star
                                        i.gm-star-full.fa.fa-star
                                        i.gm-star-empty.fa.fa-star
                                    .gm-meta-dtls
                                        .gm-init P
                                        .gm-dtls
                                            h5.gm-user Dr. Parthasarathi R,MS
                                            .gm-dates
                                                span 28th Apr 
                                                span 568 Views

                    +doctorCard2
                    +doctorCard2
                    
                h3.block-title-style-1 Library
                .gm-vdo-collection-wrapper.row

                    +doctorCard
                    +doctorCard
                    +doctorCard
                    +doctorCard
                    +doctorCard
                    +doctorCard

                .text-center
                    button.btn.gm-btn-green LOAD MORE
                        i.fa.fa-angle-down
