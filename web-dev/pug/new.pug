doctype html
html(lang='en')
    head
        title Login
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        link(rel='stylesheet', href='../assets/bootstrap/css/bootstrap.min.css')
        link(rel='stylesheet', href='../assets/bootstrap-select/css/bootstrap-select.min.css')
        link(href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel="stylesheet", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous")
        link(href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500" rel="stylesheet" )
        link(rel='stylesheet', href="../css/main.css")
    body.el-login
        .container-fluid.h-100
            .row.justify-content-center.h-100
                .el-left-block.col-md-6.d-flex.align-items-center.flex-column.justify-content-center
                    header.el-logo-wrapper
                        a(href="#")
                            img(src="../img/logo.png")
                    section.el-signin-wrapper
                        h2.el-title Sign In
                        .el-help-block Sign in to continue to our application
                        form(action="#") 
                            .form-group
                                .el-input-style-1
                                    label.control-label(for="email-address") Email address
                                    input(type="text" name="email-address").form-control
                            .form-group
                                .el-input-style-1
                                    label.control-label(for="pw") Password
                                    input(type="password" name="pw").form-control
                            .form-group
                                .form-check
                                    input(class="form-check-input" type="checkbox" id="gridCheck")
                                    label(class="form-check-label" for="gridCheck") Check me out
                            .form-group
                                button(type="submit" class="btn btn-primary") Sign in
                                a(href="#") Forgot Password
                .el-right-block.col-md-6

        script(src="../assets/jquery/jquery-3.3.1.min.js")
        script(src='../assets/bootstrap/js/bootstrap.min.js')