    script.
      $(document).ready(function(){
      $('.tag-ul, .otherfilter-ul, .topic-ul').slimScroll({
      height: '200px'
      });
      if($(window).width() <= 1024){
      var windowHeight = $(window).height();
      $('.filter-sidebar').slimScroll({
      height:windowHeight
      });
      $(document).on('click', function (e) {
      if ($(e.target).closest(".filter-sidebar").length === 0 && $(e.target).closest(".filterList").length === 0) {
      $(".filter-sidebar").hide();
      }
      });
      $('.tag-ul, .otherfilter-ul, .topic-ul').slimScroll({
      height: '100%'
      });
      };
      $("ul.filter-sort").on("click", ".init", function() {
      $(this).closest("ul").children('li:not(.init)').toggle();
      });
      var allOptions = $("ul.filter-sort").children('li:not(.init)');
      $("ul.filter-sort").on("click", "li:not(.init)", function() {
      allOptions.removeClass('selected');
      $(this).addClass('selected');
      $("ul.filter-sort").children('.init').html($(this).html());
      allOptions.toggle();
      });
      $(".filterList").on("click",function(){
      $('.filter-sidebar').toggle();
      })
      });
